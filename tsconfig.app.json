{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "app/frontend/**/*",
    "app/frontend/**/*.vue"
  ],
  "exclude": [
    "app/frontend/**/__tests__/*"
  ],
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "strict": true,
    "target": "esnext",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/frontend/*"
      ]
    }
  }
}
